<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:models="using:OmniScribe.Models"
             x:Class="OmniScribe.Views.NotificationView">

    <ItemsControl ItemsSource="{Binding}"
                  HorizontalAlignment="Right"
                  VerticalAlignment="Top"
                  Margin="0,16,16,0"
                  MaxWidth="380">
        <ItemsControl.ItemTemplate>
            <DataTemplate DataType="models:NotificationItem">
                <Border Margin="0,4"
                        Padding="14,10"
                        CornerRadius="10"
                        Background="#E6161B22"
                        BorderThickness="1"
                        BorderBrush="#2D3748">
                    <Border.Transitions>
                        <Transitions>
                            <DoubleTransition Property="Opacity" Duration="0:0:0.3" />
                        </Transitions>
                    </Border.Transitions>
                    <TextBlock Text="{Binding Message}"
                               Foreground="#E2E8F0"
                               FontSize="12"
                               TextWrapping="Wrap"
                               MaxWidth="340" />
                </Border>
            </DataTemplate>
        </ItemsControl.ItemTemplate>
    </ItemsControl>
</UserControl>
